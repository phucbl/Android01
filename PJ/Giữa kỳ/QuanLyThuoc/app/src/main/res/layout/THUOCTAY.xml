<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg5"
    tools:context=".AddRoom">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="12dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/hotel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Quản lý thuốc tây"
            android:textSize="32sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Mã thuốc:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittextMaThuocAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập mã thuốc" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Tên thuốc:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittextTenThuocAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên thuốc" />

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Đơn vị tính:"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edittextDVTAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập đơn vị tính" />
        <TextView
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:text="Giá:"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/edittextGiaAdd"
            android:hint="Nhập giá"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/buttonOkAdd"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_btn1"
                android:text="OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/buttonSua"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_btn1"
                android:text="Sửa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/buttonXoa"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_btn1"
                android:text="Xoá"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buttonHuyAdd"
                android:background="@drawable/shape_btn1"
                android:text="Hủy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


</ScrollView>