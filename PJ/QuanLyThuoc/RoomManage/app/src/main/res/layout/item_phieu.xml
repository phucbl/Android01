<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ImageView
        android:layout_gravity="center"
        android:background="@drawable/person"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="29sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="THÔNG TIN PHIẾU ĐẶT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textColor="#000"
        android:text="****************"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/textviewHoTenPhieu"
        android:textSize="22sp"
        android:text="Họ tên khách hàng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textviewNgayDatPhieu"
        android:layout_marginTop="5dp"
        android:textSize="22sp"
        android:text="Ngày đặt phiếu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/textviewSoNgayOPhieu"
        android:textSize="22sp"
        android:text="Sô ngày ở"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/textviewMaPhongPhieu"
        android:textSize="22sp"
        android:text="Mã phòng đặt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/textviewLoaiPhongPhieu"
        android:textSize="22sp"
        android:text="Loai phong đặt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/textviewTangPhieu"
        android:textSize="22sp"
        android:text="Tầng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/textviewGiaPhongPhieu"
        android:textSize="22sp"
        android:text="Giá phòng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>